<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title></title>
    <%- include ../layout/head %>
    <!-- format cho textarea (2 dòng dưới)-->
    <script src=https://cloud.tinymce.com/5-testing/tinymce.min.js></script>
    <script>tinymce.init({ selector:'textarea' });</script>
  </head>
  <body>
    <div class="container">
      <%- include ../layout/nav %>
      <div class="panel panel-default">
        <div class="panel-heading">
          Edit Post
        </div>
        <div class="panel-body">
          <div class="row">
            <div class="col-lg-6">
              <% if(data && data.error){%>
              <div id="login-alert" class="alert alert-danger col-sm-12">
                <%= data.error%>
              </div>
              <%}%>
              <!-- Bỏ method post với action vì cập nhập dữ liệu phải dùng method put -->
              <form role="form" method="" action="">
                <input class="id" type="hidden" name="id" value="<%if(data && data.post){%> <%= data.post.id%><%}%>">
                <div class="form-group">
                  <label>Title</label>
                  <input class="form-control title" name="title" placeholder="Title"
                    value="<%if(data && data.post){%> <%= data.post.title%><%}%>"
                  >
                </div>

                <div class="form-group">
                  <label>Content</label>
                  <textarea class="form-control" name="content" placeholder="Content"
                    ><%if(data && data.post){%> <%= data.post.content%><%}%>
                  </textarea>
                </div>

                <div class="form-group">
                  <label>Author</label>
                  <input class="form-control author" name="author" placeholder="Author"
                    value="<%if(data && data.post){%> <%= data.post.author%><%}%>"
                  >
                </div>

                <input type="button" name="" value="Edit" class="btn btn-success post_edit" />
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- Add file javascript vào -->
    <script type="text/javascript" src="/static/js/post.js"></script>
  </body>
</html>
